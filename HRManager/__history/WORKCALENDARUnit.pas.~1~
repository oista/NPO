procedure TForm3.Button1Click(Sender: TObject); {”“¬≈–ƒ»“№ »«ћ≈Ќ≈Ќ»я}
var
i,j,p:integer;

begin

for i:= 0 to panel3.ComponentCount -1  do
 begin
  if (panel3.Components[i] is Tpanel) then
   for j := 0 to (panel3.Components[i] as Tpanel).ComponentCount -1  do

    Begin
     if (panel3.Components[i] as Tpanel).Components[j] is TCheckBox then
      Begin
       if ((panel3.Components[i] as Tpanel).Components[j] as TCheckBox).Checked = true then
        begin
        DM.UPD_MON.params[0].Value:= 1;
        for p := 0 to (panel3.Components[i] as Tpanel).ComponentCount -1  do
          begin
          if ((panel3.Components[i] as Tpanel).Components[p]) is Tlabel then
             if ((panel3.Components[i] as Tpanel).Components[p] as TLabel).tag= 3 then
              ((panel3.Components[i] as Tpanel).Components[p] as TLabel).Font.Color:=clred;
          if ((panel3.Components[i] as Tpanel).Components[p]) is TEdit then
           begin
            ((panel3.Components[i] as Tpanel).Components[p] as TEdit).text:='';
            DM.UPD_MON.params[4].Value:='';
            DM.UPD_MON.params[5].Value:='';
           end;
          end;
        end
       else
        DM.UPD_MON.params[0].Value:= 0;
      End;

      if ((panel3.Components[i] as Tpanel).Components[j]) is TLabel then
       if ((panel3.Components[i] as Tpanel).Components[j] as TLabel).tag= 3 then
       begin
        DM.UPD_MON.params[1].Value:=((panel3.Components[i] as Tpanel).Components[j] as TLabel).caption;
        DM.UPD_MON.params[2].Value:= combobox1.Text;
        DM.UPD_MON.params[3].Value:= Edit1.Text;
       end;

      if ((panel3.Components[i] as Tpanel).Components[j]) is TEdit then
       if ((panel3.Components[i] as Tpanel).Components[j] as TEdit).tag= 1 then
        DM.UPD_MON.params[4].Value:=((panel3.Components[i] as Tpanel).Components[j] as TEdit).text;

      if ((panel3.Components[i] as Tpanel).Components[j]) is TEdit then
       if ((panel3.Components[i] as Tpanel).Components[j] as TEdit).tag=2 then
        DM.UPD_MON.params[5].Value:=((panel3.Components[i] as Tpanel).Components[j] as TEdit).text;
    end;

      DM.UPD_MON.ExecProc;
    end;
end;

procedure TForm3.Button2Click(Sender: TObject); {Ќќ¬џ…  јЋ≈Ќƒј–№}
var
year: word;
month:word;
day:word;
dni:integer;

begin
decodedate(now,year,month,day);
ADQuery2.Params[0].Value:=year+1;
ADQuery2.Open;
ADQuery2.FindFirst;
if ADQuery2CALENDAR_YEAR.asinteger=year+1 then
  begin
    showmessage(' алендарь на следующий год уже создан.');
    ADQuery2.Close;
  end
  else
    begin
      ADQuery2.Close;
      begin
       if (year mod 4 <> 0) then
       dni:=365
       else
        if (year mod 100 <> 0) then
        dni:=366
        else
          if (year mod 400 <> 0) then
          dni:=365
          else
            dni:=366;
      end;
      DM.GEN_YEAR.Params[0].Value:=dni;
     DM.GEN_YEAR.ExecProc;
    end;
end;

procedure TForm3.ComboBox1Change(Sender: TObject); {ќЅЌќ¬Ћ≈Ќ»я Ё –јЌј}
var
i:integer;
begin
    ADQuery1.Params[0].Value:= strToint(edit1.Text);
    ADQuery1.Params[1].Value:= ComboBox1.text;
    i:=1;
    while i<> 0 do
      begin
        if panel3.ComponentCount <> 0  then
          begin
           if panel3.Components[panel3.ComponentCount-1] is Tpanel then
             (panel3.Components[panel3.ComponentCount-1] as tPanel).Free
          end
         else
           i := 0;
      end;
    table_cr;
end;



procedure TForm3.FormCreate(Sender: TObject); {—ќ«ƒјЌ»≈ ‘ќ–ћџ}
var
 year,mon,day: word;
 i: integer;
begin
      decodedate(now,year,mon,day);
      Edit1.Text:= intTostr(year);
      case mon of
      01: ComboBox1.Text:='€нварь';
      02: ComboBox1.Text:='февраль';
      03: ComboBox1.Text:='март';
      04: ComboBox1.Text:='апрель';
      05: ComboBox1.Text:='май';
      06: ComboBox1.Text:='июнь';
      07: ComboBox1.Text:='июль';
      08: ComboBox1.Text:='август';
      09: ComboBox1.Text:='сент€брь';
      10: ComboBox1.Text:='окт€брь';
      11: ComboBox1.Text:='но€брь';
      12: ComboBox1.Text:='декабрь';
      end;

    ADQuery1.Params[0].Value:= strToint(edit1.Text);
    ADQuery1.Params[1].Value:= ComboBox1.text;
    i:=1;
    while i<> 0 do
      begin
        if panel3.ComponentCount <> 0  then
          begin
           if panel3.Components[panel3.ComponentCount-1] is Tpanel then
             (panel3.Components[panel3.ComponentCount-1] as tPanel).Free
          end
         else
           i := 0;
      end;
    table_cr;
end;

procedure TForm3.rowrite(H:integer; N:integer; Day: integer);
Var
  pan: TPanel;
  lab, vih: Tlabel;
  Ed, ed2: Tedit;
  box: TCheckbox;

begin
  pan := TPanel.Create(Panel3);
  pan.Parent := Panel3;
  pan.Height:=65;
  pan.Width:=73;
  pan.Left:=N;
  pan.Top:=H;

  lab:= Tlabel.Create(pan);
  lab.Parent:=pan;
  lab.Tag:=3;
  lab.Left:=25;
  lab.Top:=3;
  lab.Align:=altop;
  lab.Alignment:=tacenter;
  lab.AlignWithMargins:=true;
  lab.Caption:=IntToStr(Day);
  lab.Font.Size:=11;
  lab.Font.Style:=[fsBold];
  lab.Margins.Left:=3;
  lab.Margins.Right:=3;
  lab.Margins.Top:=1;

  box:=Tcheckbox.Create(pan);
  box.Parent:=pan;
  box.left:=47;
  box.top:=27;
  box.AlignWithMargins:=true;
  box.Margins.Left:=5;
  box.Margins.Right:=3;
  box.Margins.top:=3;
  box.Margins.Bottom:=0;
  if ADQuery1ISHOLIDAY.AsInteger=1 then
  box.Checked:=true;

  vih:=Tlabel.Create(pan);
  vih.Parent:=pan;
  vih.Caption:= 'вых.';
  vih.left:=44;
  vih.top:=43;

  ed2:= Tedit.Create(pan);
  ed2.Tag := 2;
  ed2.Parent:=pan;
  ed2.left:=2;
  ed2.top:=20;
  ed2.Width:=35;
  ed2.AlignWithMargins:=true;
  ed2.Margins.Left:=3;
  ed2.Margins.Right:=3;
  ed2.Margins.top:=3;
  ed2.Margins.Bottom:=5;


  ed:= Tedit.Create(pan);
  ed.Tag := 1;
  ed.Parent:=pan;
  ed.left:=2;
  ed.top:=40;
  ed.Width:=35;
  ed.AlignWithMargins:=true;
  ed.Margins.Left:=3;
  ed.Margins.Right:=3;
  ed.Margins.top:=3;
  ed.Margins.Bottom:=5;

  ed2.Text:=ADQuery1DAY_LENGTH_H.AsString +':' +ADQuery1DAY_LENGTH_M.AsString;
  ed.Text :=ADQuery1DAY_LENGTH_SHORT_H.AsString +':' +ADQuery1DAY_LENGTH_SHORT_M.AsString;

  if (ed2.Text=':') or (ed2.Text='0:0') then ed2.Text:='';
  if (ed.Text=':') or (ed.Text='0:0') then ed.Text:='';
  if ADQuery1ISHOLIDAY.AsInteger=1 then lab.Font.Color:=clred;


end;


PROCEDURE Tform3.table_cr();
var
  i,n,h,k:integer;

begin
  begin
  ADQuery1.Open;
  ADQuery1.FindFirst;

  if ADQuery1DAY_NAME.AsString ='понедельник' then
  begin
  h := 6;
  n := 4;
  k := 8;
  end;
  if ADQuery1DAY_NAME.AsString ='вторник' then
  begin
  h := 6;
  n := 81;
  k := 7;
  end;
  if ADQuery1DAY_NAME.AsString ='среда' then
  begin
  h := 6;
  n := 158;
  k := 6;
  end;
  if ADQuery1DAY_NAME.AsString ='четверг' then
  begin
  h := 6;
  n := 235;
  k := 5;
  end;
  if ADQuery1DAY_NAME.AsString ='п€тница' then
  begin
  h := 4;
  n := 312;
  k := 4;
  end;
  if ADQuery1DAY_NAME.AsString ='суббота' then
  begin
  h := 4;
  n := 389;
  k := 3;
  end;
  if ADQuery1DAY_NAME.AsString ='воскресенье' then
  begin
  h := 4;
  n := 466;
  k := 2;
  end;
  end;

 i:=1;
 while not ADQuery1.Eof do
    Begin
      if i in [k,k+7,k+14,k+21,k+28] then
        begin
          h := h+71;
          n := 4;
        end;
      rowrite(H,N,I);
      n := n+77;
      i:=i+1;
      ADQuery1.Next;
    End;
  ADQuery1.Close  
end;
end.
